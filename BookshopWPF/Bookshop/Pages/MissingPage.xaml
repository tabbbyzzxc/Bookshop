<Page x:Class="Bookshop.MissingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookshop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MissingPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="Out of stock" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24"/>

        <ListView x:Name="listView" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" Width="300"/>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="300"/>
                    <GridViewColumn Header="Buy Price" DisplayMemberBinding="{Binding BuyPrice}"/>
                    <GridViewColumn Header="Sell Price" DisplayMemberBinding="{Binding SellPrice}"/>
                </GridView>
            </ListView.View>
        </ListView>



    </Grid>
</Page>
