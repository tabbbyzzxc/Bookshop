<Page x:Class="Bookshop.ReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookshop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportPage">

    <Grid Margin="118,167,0,0">
        <Label Content="Sales report" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" FontSize="24"/>
        <ListView x:Name="listView" Margin="-50,-37,50,37">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}"/>
                    <GridViewColumn x:Name="column" Header="Date" DisplayMemberBinding="{Binding OrderLine}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="from" HorizontalAlignment="Left" Margin="314,-95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="to" HorizontalAlignment="Left" Margin="170,-95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="489,-96,0,0" VerticalAlignment="Top" Click="Button_Sort"/>
        <DatePicker x:Name="fromDate" Margin="-11,-146,551,405"></DatePicker>
    </Grid>
</Page>
