<Window x:Class="Bookshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookshop"
        mc:Ignorable="d"
        Title="Bookshop" Height="450" Width="1200" MinHeight="600" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="CheckoutButton" Width="150" Height="52" Content="To order" VerticalAlignment="Top" Margin="25,33,0,0" Click="Checkout_Click"/>
        <Button x:Name="ReportButton" Width="150" Height="23" VerticalAlignment="Top" Margin="25,90,0,0" Content="Sales Report" Click="Report_Click"/>
        <Button x:Name="AddButton" Width="150" Height="25" Content="Add book" VerticalAlignment="Top" Margin="25,205,0,0" Click="AddButton_Click"/>
        <Button x:Name="EditButton" Width="150" Height="25" Margin="25,235,0,0" Content="Edit book" VerticalAlignment="Top" Click="EditButton_Click"/>
        <Button x:Name="ReceiptButton" Width="150" Height="25" Margin="25,265,0,0" Content="Arrival of goods" VerticalAlignment="Top" Click="ReceiptButton_Click"/>
        <Button x:Name="MissingButton" Width="150" Height="25" Margin="25,295,0,0" Content="Missing books" VerticalAlignment="Top" Click="MissingButton_Click"/>
        <Frame x:Name="Frame1" Grid.Column="1" NavigationUIVisibility="Hidden"></Frame>

    </Grid>
</Window>
