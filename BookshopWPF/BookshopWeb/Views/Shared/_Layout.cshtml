<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookshopWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookshopWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookshopWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Order
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index">Order</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="ViewOrders">View orders</a></li>
                            </ul>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                               <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Books
                               </a>
                                <ul class="dropdown-menu dropdown-menu-light">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Books" asp-action="Index">New book</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Books" asp-action="EditSelector">Edit books</a></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Books" asp-action="MissingBooks">Missing books</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Invoice
                                </a>
                                <ul class="dropdown-menu dropdown-menu-light">
                                    <li><a class="dropdown-item" text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Income invoice</a></li>
                                    <li><a class="dropdown-item" text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Return invoice</a></li>
                                    <li><a class="dropdown-item" text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">View invoice</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Report
                                </a>
                                <ul class="dropdown-menu dropdown-menu-light">
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Orders" asp-action="Index">Order</a></li>
                                    <li><a class="dropdown-item" href="#">View orders</a></li>
                                </ul>
                            </li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">
                                Roles
                            </a>       
                        }             
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BookshopWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
