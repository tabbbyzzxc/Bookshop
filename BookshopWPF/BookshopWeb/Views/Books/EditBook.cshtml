@model EditBookViewModel

<form action="@Url.Action("EditBook", "Books", Model.Id)" method="post">
    <div class="form-floating col-4">
        <input class="form-control" type="text" id="author" name="author" placeholder="Author name" asp-for="Author" required>
        <label for="author">Author:</label><br>
    </div>
    <div class="form-floating col-4">
        <input class="form-control" type="text" id="title" name="title" placeholder="Book name" asp-for="Title" required>
        <label for="title">Title:</label><br>
    </div>
    <div class="form-floating col-4">
        <select id="genre" name="genre" class="form-select" asp-for="Genre" required>
            <option value="" disabled selected>Select a genre</option>
            <option value="Adventure">Adventure</option>
            <option value="Biography">Biography</option>
            <option value="Fantasy">Fantasy</option>
            <option value="Mystery">Mystery</option>
            <option value="Romance">Romance</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Fiction">Fiction</option>
            <option value="Classics">Classics</option>
            <option value="Historical Fiction">Historical Fiction</option>
            <option value="Young Adult">Young Adult</option>
            <option value="Children's Literature">Children's Literature</option>
            <option value="Horror">Horror</option>
            <option value="Poetry">Poetry</option>
        </select>
        <label for="genre">Genre:</label><br>
    </div>
    <div class="form-floating col-4">
        <input class="form-control" type="number" id="buyPrice" name="buyPrice" placeholder="Buy price" asp-for="BuyPrice" required>
        <label for="buyPrice">Buy Price:</label><br>
    </div>
    <div class="form-floating col-4">
        <input class="form-control" type="number" id="sellPrice" name="sellPrice" placeholder="Sell price" asp-for="SellPrice" required>
        <label for="sellPrice">Sell Price:</label><br>
    </div>
    <div class="form-floating col-4">
        <input class="form-control" type="text" id="language" name="language" placeholder="Language" asp-for="Language" required>
        <label for="language">Language:</label><br>
    </div>
    <div class="form-floating col-4">
        <select id="paperType" name="paperType" class="form-select" asp-for="PaperType" required>
            <option value="Hardcover">Hardcover</option>
            <option value="Paperback">Paperback</option>
        </select>
        <label for="paperType">Paper Type:</label><br>
    </div>
    <div class="form-floating col-4">
        <input class="form-control" type="number" id="pageCount" name="pageCount" placeholder="Page count" asp-for="PageQuantity" required>
        <label for="pageCount">Page Count:</label><br>
    </div>
    <div class="form-floating col-4">
        <textarea class="form-control" id="description" name="description" rows="4" cols="50" placeholder="Leave a description here" asp-for="Description" required></textarea>
        <label for="description">Description:</label><br>
    </div>
    <input type="submit" value="Submit">
</form>

