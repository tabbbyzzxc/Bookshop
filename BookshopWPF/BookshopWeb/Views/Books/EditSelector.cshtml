@{
}
@model EditBookListViewModel
<div>
    <label for="searchInput">Search:</label>
    <input type="text" id="searchInput" name="searchInput" />
    <button onclick="searchBooks()">Search</button>
</div>

<div>
    <h2>Book List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td>@book.Author</td>
                    <td>@book.Title</td>
                    <td>@book.SellPrice</td>
                    <td>
                        <a class="dropdown-item" text-dark" asp-area="" asp-controller="Books" asp-action="EditBook" asp-route-id="@book.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="https://kit.fontawesome.com/1961c270d9.js" crossorigin="anonymous"></script>
